<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yönetim Paneli</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EtkinlikYonetimi.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body style="background: var(--light-bg);">
    <header>
        <nav class="navbar navbar-expand-lg admin-navbar">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <div class="bg-warning rounded-circle p-2 me-3">
                        <i class="fas fa-cogs text-dark"></i>
                    </div>
                    <span class="text-white">Yönetim Paneli</span>
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light d-flex align-items-center" asp-area="Admin" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-2"></i>
                                Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light d-flex align-items-center" asp-area="Admin" asp-controller="EventManagement" asp-action="Index">
                                <i class="fas fa-calendar-check me-2"></i>
                                Etkinlik Yönetimi
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light d-flex align-items-center" asp-area="Admin" asp-controller="Profile" asp-action="Index">
                                <i class="fas fa-user me-2"></i>
                                Profil
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light d-flex align-items-center bg-glass rounded-pill px-3 me-2" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-eye me-2"></i>
                                Siteyi Görüntüle
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light d-flex align-items-center" asp-area="Admin" asp-controller="Account" asp-action="Logout">
                                <i class="fas fa-sign-out-alt me-2"></i>
                                Çıkış Yap
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container-fluid py-4">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show admin-card" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x text-success me-3"></i>
                        <div>
                            <h6 class="mb-1">Başarılı!</h6>
                            <p class="mb-0">@TempData["SuccessMessage"]</p>
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show admin-card" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-circle fa-2x text-danger me-3"></i>
                        <div>
                            <h6 class="mb-1">Hata!</h6>
                            <p class="mb-0">@TempData["ErrorMessage"]</p>
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-5">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <p class="mb-0">
                        <i class="fas fa-shield-alt me-2"></i>
                        &copy; @DateTime.Now.Year - Etkinlik Yönetim Uygulaması - Yönetim Paneli
                    </p>
                </div>
                <div class="col-md-4 text-md-end">
                    <div class="d-inline-block">
                        <i class="fas fa-lock text-warning me-1"></i>
                        <small class="text-white-50">Güvenli Admin Paneli</small>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>