@model UserDto
@{
    ViewData["Title"] = "Profil Ayarları";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h4><i class="fas fa-user-edit"></i> Profil Ayarları</h4>
            </div>
            <div class="card-body">
                <form asp-action="Index" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <input asp-for="Id" type="hidden" />
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="BirthDate" class="form-label"></label>
                        <input asp-for="BirthDate" class="form-control" type="date" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Kayıt Tarihi</label>
                        <input value="@Model.CreatedAt.ToString("dd MMMM yyyy, HH:mm", new System.Globalization.CultureInfo("tr-TR"))" class="form-control" readonly />
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary me-md-2">
                            <i class="fas fa-times"></i> İptal
                        </a>
                        <button type="submit" class="btn btn-info">
                            <i class="fas fa-save"></i> Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card mt-4 shadow">
            <div class="card-header bg-warning text-dark">
                <h5><i class="fas fa-key"></i> Parola Değiştirme</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">
                    <i class="fas fa-info-circle"></i> 
                    Parolanızı değiştirmek için yöneticiye başvurun veya hesabınızı yeniden oluşturun.
                </p>
                <p class="mb-0">
                    <strong>Parola Kriterleri:</strong> En az 8 karakter, büyük harf, küçük harf ve rakam içermelidir.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}